<UserControl x:Class="IGAntiRansomwareUI.DashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1e1e2e">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF89B4FA"/>
            <Setter Property="Foreground" Value="#FF1E1E2E"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Cabeçalho -->
            <TextBlock Text="Dashboard" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Status de Proteção -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Status do Sistema" 
                               FontSize="14" 
                               FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock x:Name="statusIcon" Text="✓" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock x:Name="protectionStatus" Text="Proteção Ativa" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="toggleBtn" Content="Desativar" Click="ToggleBtn_Click"/>
                        <Button x:Name="quickSettingsBtn" Content="Configurações Rápidas" Click="QuickSettingsBtn_Click"
                                Background="#FF555555"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Verificação Rápida -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Verificação do Sistema" 
                               FontSize="14" 
                               FontWeight="Bold"/>

                    <ProgressBar x:Name="scanProgressBar" 
                                 Height="10" 
                                 Margin="0,10,0,5"
                                 Background="#FF555555"
                                 Foreground="#FF89B4FA"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Progresso: "/>
                        <TextBlock x:Name="scanProgressText" Text="0%"/>
                    </StackPanel>

                    <TextBlock x:Name="scanStatus" Text="Sistema não verificado" 
                               Margin="0,5,0,10"
                               Foreground="#FFA6E3A1"/>

                    <Button x:Name="startScanBtn" Content="Iniciar Verificação" 
                            Click="StartScanBtn_Click"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Estatísticas -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Estatísticas do Sistema" 
                               FontSize="14" 
                               FontWeight="Bold"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Arquivos Verificados" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="filesScannedText" Text="0" FontSize="18" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#FF89B4FA"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Ameaças Detectadas" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="threatsDetectedText" Text="0" FontSize="18" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#FFA6E3A1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Arquivos Protegidos" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="filesProtectedText" Text="0" FontSize="18" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#FFF5C2E7"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Alertas Recentes -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Alertas Recentes" 
                                   FontSize="14" 
                                   FontWeight="Bold"/>

                        <Border x:Name="alertsBadge" 
                                Background="#FFF38BA8" 
                                CornerRadius="8"
                                Padding="4,2"
                                Margin="10,0,0,0"
                                Visibility="Collapsed">
                            <TextBlock x:Name="alertsBadgeText" Text="0" 
                                       FontSize="10" Foreground="#FF1E1E2E" FontWeight="Bold"/>
                        </Border>

                        <Button x:Name="viewAllAlertsBtn" Content="Ver Todos" 
                                Click="ViewAllAlertsBtn_Click"
                                Margin="20,0,0,0"
                                Padding="5,2"
                                Background="Transparent"
                                Foreground="#FF89B4FA"
                                BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel x:Name="alertsStackPanel" Margin="0,10,0,0">
                        <TextBlock Text="Nenhum alerta recente" 
                                   FontStyle="Italic"
                                   Foreground="#FF6C7086"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Ações Rápidas -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Ações Rápidas" 
                               FontSize="14" 
                               FontWeight="Bold"/>

                    <WrapPanel Margin="0,10,0,0">
                        <Button Content="Backup de Segurança" Margin="0,0,10,10"
                                Background="#FFA6E3A1"/>
                        <Button Content="Relatório de Atividade" Margin="0,0,10,10"
                                Background="#FF89B4FA"/>
                        <Button Content="Gerenciar Regras" Margin="0,0,10,10"
                                Background="#FFF5C2E7"/>
                        <Button Content="Ver Logs Completos" 
                                Background="#FF555555"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>  