<UserControl x:Class="IGAntiRansomwareUI.Logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1e1e2e">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF89B4FA"/>
            <Setter Property="Foreground" Value="#FF1E1E2E"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- DataTemplate para diferentes tipos de log -->
        <DataTemplate x:Key="LogItemTemplate">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="{Binding Timestamp}" 
                           Foreground="#FFA6ADC8" 
                           Width="80"
                           FontFamily="Consolas"/>
                <Border Width="6"/>
                <TextBlock Text="{Binding LogType}" 
                           Width="80"
                           FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#FFCDD6F4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LogType}" Value="Error">
                                    <Setter Property="Foreground" Value="#FFF38BA8"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LogType}" Value="Warning">
                                    <Setter Property="Foreground" Value="#FFF9E2AF"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LogType}" Value="Alert">
                                    <Setter Property="Foreground" Value="#FFA6E3A1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LogType}" Value="Info">
                                    <Setter Property="Foreground" Value="#FF89B4FA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Border Width="15"/>
                <TextBlock Text="{Binding Message}" 
                           Foreground="#FFCDD6F4"
                           TextWrapping="Wrap"
                           Width="550"/>
            </StackPanel>
        </DataTemplate>

        <!-- Style para alternância de linhas -->
        <Style x:Key="AlternatingListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter TargetName="Bd" Property="Background" Value="#FF313244"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter TargetName="Bd" Property="Background" Value="#FF1E1E2E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF45475A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF89B4FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
            <Button Content="← Voltar" Click="BtnBack_Click"
                    Style="{StaticResource SidebarButtonStyle}" Width="100"/>

            <TextBlock Text="Logs do Sistema" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White" Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Área de Logs -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="20,0,20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Controles de Filtro -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Filtrar por:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <ComboBox x:Name="cmbLogType" Width="120" SelectedIndex="0">
                        <ComboBoxItem Content="Todos"/>
                        <ComboBoxItem Content="Info"/>
                        <ComboBoxItem Content="Avisos"/>
                        <ComboBoxItem Content="Erros"/>
                        <ComboBoxItem Content="Alertas"/>
                    </ComboBox>

                    <Button x:Name="btnClearLogs" Content="Limpar Logs" 
                            Click="BtnClearLogs_Click" Margin="20,0,0,0"
                            Background="#FFF38BA8"/>

                    <Button x:Name="btnExportLogs" Content="Exportar Logs" 
                            Click="BtnExportLogs_Click" Margin="10,0,0,0"
                            Background="#FFA6E3A1"/>
                </StackPanel>

                <!-- Lista de Logs -->
                <ListView Grid.Row="1" x:Name="lstLogs" 
                          Background="Transparent" 
                          BorderThickness="0"
                          ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
                          ItemsSource="{Binding}"
                          AlternationCount="2"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,2">
                                <TextBlock Text="{Binding Timestamp}" 
                                           Foreground="#FFA6ADC8" 
                                           Width="80"
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"/>

                                <Border Width="10"/>

                                <Border Background="{Binding LogTypeColor}" 
                                        CornerRadius="3" Padding="4,2"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding LogType}" 
                                               Foreground="#FF1E1E2E"
                                               FontWeight="Bold"
                                               FontSize="11"
                                               HorizontalAlignment="Center"
                                               MinWidth="60"/>
                                </Border>

                                <Border Width="15"/>

                                <TextBlock Text="{Binding Message}" 
                                           Foreground="#FFCDD6F4"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Status -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock x:Name="txtLogCount" Text="0 logs"
                               Foreground="#FFA6ADC8" FontStyle="Italic"/>

                    <TextBlock x:Name="txtAutoScrollStatus" Text=" | Auto-scroll: Ativo" 
                               Foreground="#FFA6E3A1" FontStyle="Italic" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Rodapé com ações rápidas -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <CheckBox x:Name="chkAutoScroll" Content="Auto-scroll" 
                      IsChecked="True" Foreground="#FFCDD6F4" VerticalAlignment="Center"/>

            <CheckBox x:Name="chkAutoRefresh" Content="Auto-atualizar" 
                      IsChecked="True" Foreground="#FFCDD6F4" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <Button Content="Atualizar Agora" Click="BtnRefresh_Click"
                    Margin="20,0,0,0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>