<UserControl x:Class="IGAntiRansomwareUI.RuleEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#1e1e2e">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF89B4FA"/>
            <Setter Property="Foreground" Value="#FF1E1E2E"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="Editor de Regras" 
                       FontSize="16" FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <!-- Nome da Regra -->
            <TextBlock Text="Nome da Regra*"/>
            <TextBox x:Name="txtRuleName" Text="{Binding Name, Mode=TwoWay}"
                     TextChanged="TxtRuleName_TextChanged"/>

            <!-- Tipo de Regra -->
            <TextBlock Text="Tipo de Regra"/>
            <ComboBox x:Name="cmbRuleType" 
                      SelectedValue="{Binding Type, Mode=TwoWay}"/>

            <!-- Pattern -->
            <TextBlock Text="Pattern*"/>
            <TextBox x:Name="txtPattern" 
                     Text="{Binding Pattern, Mode=TwoWay}"
                     TextChanged="TxtPattern_TextChanged"
                     ToolTip="Padrão para detecção (ex: *.encrypted, ransom*)"/>

            <!-- Caminho Alvo -->
            <TextBlock Text="Caminho Alvo (Opcional)"/>
            <TextBox x:Name="txtTargetPath" 
                     Text="{Binding TargetPath, Mode=TwoWay}"
                     ToolTip="Caminho específico para monitorar (ex: C:\Users\*\Documents\)"/>

            <!-- Tamanhos de Arquivo -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tamanho Mínimo (bytes)"/>
                    <TextBox x:Name="txtMinFileSize" 
                           Text="{Binding MinFileSize, Mode=TwoWay}"
                           TextChanged="TxtFileSize_TextChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Tamanho Máximo (bytes)"/>
                    <TextBox x:Name="txtMaxFileSize" 
                           Text="{Binding MaxFileSize, Mode=TwoWay}"
                           TextChanged="TxtFileSize_TextChanged"/>
                </StackPanel>
            </Grid>

            <!-- Descrição -->
            <TextBlock Text="Descrição"/>
            <TextBox x:Name="txtDescription" 
                     Text="{Binding Description, Mode=TwoWay}"
                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Flags/Opções -->
            <TextBlock Text="Opções" FontWeight="Bold" Margin="0,20,0,10"/>

            <CheckBox x:Name="chkActive" Content="Regra Ativa"
                      IsChecked="{Binding IsActive, Mode=TwoWay}"/>

            <CheckBox x:Name="chkBlock" Content="Bloquear Operação"
                      IsChecked="{Binding ShouldBlock, Mode=TwoWay}"/>

            <CheckBox x:Name="chkAlertOnly" Content="Apenas Alertar"
                      IsChecked="{Binding AlertOnly, Mode=TwoWay}"/>

            <CheckBox x:Name="chkBackup" Content="Fazer Backup"
                      IsChecked="{Binding ShouldBackup, Mode=TwoWay}"/>

            <!-- Status -->
            <TextBlock x:Name="txtStatus" Margin="0,20,0,0"
                       Foreground="#FFA6E3A1" TextWrapping="Wrap"
                       Visibility="Collapsed"/>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnCancel" Content="Cancelar"
                        Click="BtnCancel_Click"
                        Background="#FF555555"/>

                <Button x:Name="btnSave" Content="Salvar Regra"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>