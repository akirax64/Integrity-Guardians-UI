<Window x:Class="IGAntiRansomwareUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IGAntiRansomwareUI"
        mc:Ignorable="d"
        Title="Integrity Guardians Anti-Ransomware" Height="600" Width="900"
        Background="#1e1e2e" Loaded="Window_Loaded" Unloaded="Window_Unloaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#FF181825">
            <StackPanel>
                <!-- Logo -->
                <StackPanel Margin="10,34,10,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Integrity" Foreground="#FFCDD6F4" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Guardians" Foreground="#FFCDD6F4" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Margin="0,30,0,0">
                    <Button Content="Dashboard" Style="{StaticResource SidebarButtonStyle}" Click="ShowDashboard_Click" FontSize="16" Padding="10,15,10,15" Width="200" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                    <Button Content="Proteção" Style="{StaticResource SidebarButtonStyle}" Click="ShowProtection_Click" HorizontalAlignment="Center" FontSize="16" Padding="10,15,10,15" Width="200" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                    <Button Content="Regras" Style="{StaticResource SidebarButtonStyle}" Click="ShowRules_Click" HorizontalAlignment="Center" Padding="10,15,10,15" FontSize="16" Width="200" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                    <Button Content="Blacklist" Style="{StaticResource SidebarButtonStyle}" Click="ShowBlacklist_Click" HorizontalAlignment="Center" Padding="10,15,10,15" FontSize="16" Width="200" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                    <Button Content="Logs" Style="{StaticResource SidebarButtonStyle}" Click="ShowLogs_Click" HorizontalAlignment="Center" Padding="10,15,10,15" FontSize="16" Width="200" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                    <Button Content="Configurações" Style="{StaticResource SidebarButtonStyle}" Click="ShowSettings_Click" FontSize="16" Padding="10,15,10,15" HorizontalContentAlignment="Center" Foreground="#F2DADFED"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Orientation="Horizontal" Margin="10,50,10,20" Height="20" HorizontalAlignment="Center">
                    <TextBlock x:Name="IconText" Text="●" Foreground="#FFA6E3A1" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Protegido" Foreground="#FFCDD6F4" FontSize="16" Margin="5,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area - AGORA USANDO ContentControl -->
        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>