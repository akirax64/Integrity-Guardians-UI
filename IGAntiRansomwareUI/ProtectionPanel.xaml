<UserControl x:Class="IGAntiRansomwareUI.ProtectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1e1e2e">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF89B4FA"/>
            <Setter Property="Foreground" Value="#FF1E1E2E"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="#FF313244"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Style para botões da sidebar -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF313244"/>
                                <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="#FFFFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF89B4FA"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF89B4FA"/>
                                <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="#FF1E1E2E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF444444"/>
                                <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="#FF888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
            <Button Content="← Voltar" Click="BtnBack_Click"
                    Style="{StaticResource SidebarButtonStyle}" Width="100"/>

            <TextBlock Text="Controle de Proteção" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="White" Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Conteúdo Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <StackPanel>
                <!-- Status de Proteção -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Status de Proteção" FontSize="14" FontWeight="Bold"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock x:Name="statusIcon" Text="✓" FontSize="20" Margin="0,0,10,0"
                                       Foreground="#FFA6E3A1"/>
                            <TextBlock x:Name="protectionStatus" Text="Proteção Ativa" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="btnToggleProtection" Content="Desativar Proteção" 
                                    Click="BtnToggleProtection_Click"
                                    Background="#FFF38BA8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Modo de Operação -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Modo de Operação" FontSize="14" FontWeight="Bold"/>

                        <ComboBox x:Name="cmbProtectionMode" Margin="0,10,0,0"
                                  SelectionChanged="CmbProtectionMode_SelectionChanged">
                            <ComboBoxItem Content="Modo Ativo (Bloquear e Alertar)"/>
                            <ComboBoxItem Content="Modo Passivo (Apenas Monitorar)"/>
                            <ComboBoxItem Content="Modo Agressivo (Bloquear Tudo)"/>
                        </ComboBox>

                        <TextBlock Text="O modo ativo bloqueia ameaças automaticamente. O modo passivo apenas registra em logs." 
                                   FontSize="11" FontStyle="Italic" Foreground="#FFA6ADC8" Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Estatísticas Rápidas -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Estatísticas de Proteção" FontSize="14" FontWeight="Bold"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Arquivos Monitorados" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFilesMonitored" Text="0" FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#FF89B4FA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Bloqueios Hoje" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtBlocksToday" Text="0" FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#FFF38BA8"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Arquivos Protegidos" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtFilesProtected" Text="0" FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#FFA6E3A1"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="btnRefreshStats" Content="Atualizar Estatísticas" 
                                    Click="BtnRefreshStats_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Proteção em Tempo Real -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Proteção em Tempo Real" FontSize="14" FontWeight="Bold"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <CheckBox x:Name="chkFileSystem" Content="Proteção de Sistema de Arquivos" 
                                          IsChecked="True" Margin="0,0,10,0"/>
                                <TextBlock Text="●" Foreground="#FFA6E3A1" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox x:Name="chkMemory" Content="Proteção de Memória" 
                                          IsChecked="True" Margin="0,0,10,0"/>
                                <TextBlock Text="●" Foreground="#FFA6E3A1" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox x:Name="chkProcess" Content="Proteção de Processos" 
                                          IsChecked="True" Margin="0,0,10,0"/>
                                <TextBlock Text="●" Foreground="#FFF38BA8" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Ações Rápidas -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Ações Rápidas" FontSize="14" FontWeight="Bold"/>

                        <WrapPanel Margin="0,10,0,0">
                            <Button Content="Ver Logs de Bloqueio" Click="BtnViewBlockLogs_Click"
                                    Margin="0,0,10,10" Background="#FF89B4FA"/>
                            <Button Content="Configurações Avançadas" Click="BtnAdvancedSettings_Click"
                                    Margin="0,0,10,10" Background="#FF74C7EC"/>
                            <Button Content="Testar Proteção" Click="BtnTestProtection_Click"
                                    Margin="0,0,10,10" Background="#FFA6E3A1"/>
                            <Button Content="Diagnóstico" Click="BtnDiagnostic_Click"
                                    Background="#FFF5C2E7"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>